<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d72"
        android:layout_margin="@dimen/d16">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/btn_add"
                android:layout_width="@dimen/d72"
                android:layout_height="@dimen/d72"
                android:padding="@dimen/d4"
                android:src="@drawable/ic_add"/>
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btn_remove"
        android:layout_toRightOf="@id/item_card"
        android:layout_above="@id/item_card"
        android:layout_width="@dimen/d24"
        android:layout_height="@dimen/d24"
        android:background="@drawable/wave_back"
        android:layout_marginBottom="@dimen/md30"
        android:layout_marginLeft="@dimen/md30"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:text="X"/>
</RelativeLayout>
